# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript, JavaScript ファイル
[*.{ts,tsx,js,jsx}]
charset = utf-8
indent_style = space
indent_size = 2

# JSON ファイル
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# CSS, SCSS ファイル
[*.{css,scss}]
charset = utf-8
indent_style = space
indent_size = 2

# HTML ファイル
[*.html]
charset = utf-8
indent_style = space
indent_size = 2

# Markdown ファイル
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# YAML ファイル
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# SQL ファイル
[*.sql]
charset = utf-8
indent_style = space
indent_size = 2

# Prisma Schema
[*.prisma]
charset = utf-8
indent_style = space
indent_size = 2